@inherits LayoutComponentBase
@implements IDisposable
@using Corelio.BlazorApp.Services
@using Corelio.BlazorApp.Services.Theming
@using Microsoft.AspNetCore.Components.Authorization
@inject IDynamicThemeService DynamicThemeService
@inject ITenantThemeHttpService TenantThemeHttpService
@inject AuthenticationStateProvider AuthenticationStateProvider

<MudThemeProvider Theme="@_currentTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Class="app-bar">
        <MudIconButton Icon="@Icons.Material.Rounded.Menu" Color="Color.Default" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
        <TenantDisplay />
        <UserDisplay />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="0"
               Style="background: var(--color-sidebar-bg);">
        <NavMenu />
    </MudDrawer>

    <MudMainContent Style="background: var(--color-background); min-height: 100vh;">
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="pa-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">ðŸ—™</span>
</div>

@code {
    private bool _drawerOpen = true;
    private MudBlazor.MudTheme _currentTheme = ThemeConfiguration.CorelioDefaultTheme;

    protected override async Task OnInitializedAsync()
    {
        AuthenticationStateProvider.AuthenticationStateChanged += OnAuthenticationStateChanged;
        await LoadTenantThemeAsync();
    }

    private async void OnAuthenticationStateChanged(Task<AuthenticationState> task)
    {
        await LoadTenantThemeAsync();
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadTenantThemeAsync()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();

            if (authState.User?.Identity?.IsAuthenticated == true)
            {
                var themeResponse = await TenantThemeHttpService.GetCurrentThemeAsync();

                if (themeResponse is { UseCustomTheme: true })
                {
                    _currentTheme = DynamicThemeService.GetThemeForTenant(themeResponse.PrimaryColor);
                }
                else
                {
                    _currentTheme = ThemeConfiguration.CorelioDefaultTheme;
                }
            }
            else
            {
                _currentTheme = ThemeConfiguration.CorelioDefaultTheme;
            }
        }
        catch
        {
            _currentTheme = ThemeConfiguration.CorelioDefaultTheme;
        }
    }

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    public void Dispose()
    {
        AuthenticationStateProvider.AuthenticationStateChanged -= OnAuthenticationStateChanged;
    }
}
