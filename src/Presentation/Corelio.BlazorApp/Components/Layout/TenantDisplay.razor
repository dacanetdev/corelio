@using Corelio.BlazorApp.Resources
@using Microsoft.Extensions.Localization
@inject IAuthService AuthService
@inject IStringLocalizer<SharedResource> L

<AuthorizeView>
    <Authorized>
        <div class="tenant-display-badge" title="@_tenantName">
            <MudIcon Icon="@Icons.Material.Filled.Store" Size="Size.Small" Class="tenant-display-icon" />
            <span class="tenant-display-name">@_tenantName</span>
        </div>
    </Authorized>
</AuthorizeView>

@code {
    private string _tenantName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var userInfo = await AuthService.GetCurrentUserAsync();
        if (userInfo is not null)
        {
            _tenantName = userInfo.TenantName;
        }
    }
}
