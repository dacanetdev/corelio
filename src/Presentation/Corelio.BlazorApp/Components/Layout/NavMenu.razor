@using Corelio.BlazorApp.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> L

<div class="sidebar-brand">
    <div class="sidebar-brand-icon">
        <MudIcon Icon="@Icons.Material.Rounded.Hardware" Size="Size.Small" />
    </div>
    <div class="sidebar-brand-text">
        <span class="sidebar-brand-name">Corelio</span>
        <span class="sidebar-brand-tag">ERP</span>
    </div>
</div>

<div class="sidebar-divider"></div>

<MudNavMenu Class="sidebar-nav" Bordered="false" Margin="Margin.Dense">
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Rounded.SpaceDashboard">
        Dashboard
    </MudNavLink>

    <div class="sidebar-section-label">INVENTARIO</div>

    <MudNavLink Href="/products" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Rounded.Inventory2">
        @L["Products"]
    </MudNavLink>

    <div class="sidebar-section-label">PRECIOS</div>

    <MudNavLink Href="/settings/pricing" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Rounded.Tune">
        @L["Settings"]
    </MudNavLink>

    <MudNavLink Href="/pricing" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Rounded.PriceChange">
        @L["PriceChange"]
    </MudNavLink>
</MudNavMenu>

<div class="sidebar-footer">
    <MudText Typo="Typo.caption" Style="color: var(--color-sidebar-section-label);">
        Corelio v1.0
    </MudText>
</div>
