@page "/auth/reset-password"
@using Corelio.BlazorApp.Models.Authentication
@using Corelio.BlazorApp.Models.ViewModels
@using Corelio.BlazorApp.Resources
@using Microsoft.Extensions.Localization
@inject IAuthService AuthService
@inject NavigationManager NavigationManager
@inject IStringLocalizer<SharedResource> L

<PageTitle>@L["ResetPasswordPageTitle"]</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
    <MudPaper Elevation="3" Class="pa-8" Style="width: 100%;">
        <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">
            @L["ResetPassword"]
        </MudText>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <MudAlert Severity="Severity.Error" Class="mb-4">
                @_errorMessage
            </MudAlert>
        }

        <EditForm Model="_resetPasswordModel" OnValidSubmit="HandleResetPassword">
            <DataAnnotationsValidator />

            <MudTextField @bind-Value="_resetPasswordModel.Email"
                          Label="@L["Email"]"
                          Variant="Variant.Outlined"
                          InputType="InputType.Email"
                          Margin="Margin.Dense"
                          Disabled="true"
                          Class="mb-4"
                          For="@(() => _resetPasswordModel.Email)" />

            <MudTextField @bind-Value="_resetPasswordModel.NewPassword"
                          Label="@L["NewPassword"]"
                          Variant="Variant.Outlined"
                          InputType="InputType.Password"
                          Margin="Margin.Dense"
                          Required="true"
                          Class="mb-4"
                          For="@(() => _resetPasswordModel.NewPassword)" />

            <MudTextField @bind-Value="_resetPasswordModel.ConfirmPassword"
                          Label="@L["ConfirmPassword"]"
                          Variant="Variant.Outlined"
                          InputType="InputType.Password"
                          Margin="Margin.Dense"
                          Required="true"
                          Class="mb-4"
                          For="@(() => _resetPasswordModel.ConfirmPassword)" />

            <MudButton ButtonType="ButtonType.Submit"
                       Variant="Variant.Filled"
                       Color="Color.Primary"
                       FullWidth="true"
                       Size="Size.Large"
                       Disabled="_isLoading"
                       Class="mb-3">
                @if (_isLoading)
                {
                    <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                    <MudText Class="ms-2">@L["ResetPassword"]...</MudText>
                }
                else
                {
                    @L["ResetPassword"]
                }
            </MudButton>

            <MudText Align="Align.Center">
                <MudLink Href="/auth/login" Color="Color.Primary">
                    @L["BackToLogin"]
                </MudLink>
            </MudText>
        </EditForm>
    </MudPaper>
</MudContainer>

@code {
    private ResetPasswordViewModel _resetPasswordModel = new();
    private bool _isLoading;
    private string? _errorMessage;

    [SupplyParameterFromQuery(Name = "token")]
    public string? Token { get; set; }

    [SupplyParameterFromQuery(Name = "email")]
    public string? Email { get; set; }

    protected override void OnInitialized()
    {
        if (!string.IsNullOrEmpty(Token) && !string.IsNullOrEmpty(Email))
        {
            _resetPasswordModel.Token = Token;
            _resetPasswordModel.Email = Email;
        }
        else
        {
            NavigationManager.NavigateTo("/auth/login");
        }
    }

    private async Task HandleResetPassword()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            var request = new ResetPasswordRequest
            {
                Email = _resetPasswordModel.Email,
                Token = _resetPasswordModel.Token,
                NewPassword = _resetPasswordModel.NewPassword,
                ConfirmPassword = _resetPasswordModel.ConfirmPassword
            };

            var result = await AuthService.ResetPasswordAsync(request);

            if (result.IsSuccess)
            {
                // Redirect to login with success message
                NavigationManager.NavigateTo("/auth/login");
            }
            else
            {
                _errorMessage = result.Error ?? L["PasswordResetFailed"];
            }
        }
        catch (Exception)
        {
            _errorMessage = L["UnexpectedError"];
        }
        finally
        {
            _isLoading = false;
        }
    }
}
