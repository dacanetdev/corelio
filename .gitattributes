# Auto detect text files and perform LF normalization
* text=auto

# Source code - use LF for cross-platform CI compatibility
*.cs text eol=lf diff=csharp
*.cshtml text eol=lf diff=html
*.csx text eol=lf diff=csharp
*.razor text eol=lf diff=html

# Build scripts
*.sh text eol=lf
*.ps1 text eol=crlf
*.cmd text eol=crlf
*.bat text eol=crlf

# Configuration files
*.json text
*.xml text
*.config text
*.props text
*.targets text
*.nuspec text
*.resx text
*.ruleset text

# Documentation
*.md text diff=markdown
*.txt text
*.adoc text
*.textile text
*.mustache text
*.csv text
*.tab text
*.tsv text
*.sql text

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary

# Archives
*.7z binary
*.gz binary
*.tar binary
*.tgz binary
*.zip binary

# Fonts
*.ttf binary
*.eot binary
*.otf binary
*.woff binary
*.woff2 binary

# Executables
*.exe binary
*.pyc binary
*.dll binary

# RC files (if needed)
*.rc text

# .NET specific
*.sln text eol=crlf
*.csproj text eol=crlf merge=union
*.vbproj text eol=crlf merge=union
*.vcxproj text eol=crlf merge=union
*.vcproj text eol=crlf merge=union
*.dbproj text eol=crlf merge=union
*.fsproj text eol=crlf merge=union
*.lsproj text eol=crlf merge=union
*.wixproj text eol=crlf merge=union
*.modelproj text eol=crlf merge=union
*.sqlproj text eol=crlf merge=union
*.wwaproj text eol=crlf merge=union

# Docker
Dockerfile text eol=lf
docker-compose*.yml text eol=lf
.dockerignore text eol=lf

# Git config
.gitattributes text
.gitignore text
.gitconfig text
.gitmodules text

# GitHub
.github/**/* text eol=lf

# Node
package.json text eol=lf
package-lock.json text eol=lf
.nvmrc text eol=lf
.npmrc text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# Exclude from exports
.gitattributes export-ignore
.gitignore export-ignore
