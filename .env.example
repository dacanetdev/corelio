# Corelio Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==========================================
# DATABASE
# ==========================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=corelio_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here

# Connection string (PostgreSQL)
ConnectionStrings__DefaultConnection=Host=${DATABASE_HOST};Port=${DATABASE_PORT};Database=${DATABASE_NAME};Username=${DATABASE_USER};Password=${DATABASE_PASSWORD}

# ==========================================
# REDIS CACHE
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==========================================
# JWT AUTHENTICATION
# ==========================================
JWT_SECRET=your_very_long_secret_key_at_least_32_characters_here
JWT_ISSUER=https://api.corelio.app
JWT_AUDIENCE=https://corelio.app
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_DAYS=7

# ==========================================
# AZURE KEY VAULT (Production)
# ==========================================
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_KEY_VAULT_TENANT_ID=your-tenant-id
AZURE_KEY_VAULT_CLIENT_ID=your-client-id
AZURE_KEY_VAULT_CLIENT_SECRET=your-client-secret

# ==========================================
# CFDI / PAC PROVIDER
# ==========================================
CFDI_PAC_PROVIDER=Finkel
CFDI_PAC_BASE_URL=https://demo-api.finkel.com.mx
CFDI_PAC_API_KEY=your_pac_api_key_here
CFDI_PAC_USERNAME=your_pac_username
CFDI_PAC_PASSWORD=your_pac_password

# ==========================================
# EMAIL (SendGrid or SMTP)
# ==========================================
EMAIL_PROVIDER=SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM_ADDRESS=noreply@corelio.app
EMAIL_FROM_NAME=Corelio

# SMTP Alternative
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_ENABLE_SSL=true

# ==========================================
# ASPIRE / OBSERVABILITY
# ==========================================
ASPIRE_DASHBOARD_URL=http://localhost:15888
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# ==========================================
# LOGGING
# ==========================================
LOGGING_LEVEL=Information
SERILOG_SEQ_URL=http://localhost:5341
SERILOG_SEQ_API_KEY=

# ==========================================
# APPLICATION
# ==========================================
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://localhost:7000;http://localhost:5000

# ==========================================
# CORS
# ==========================================
CORS_ALLOWED_ORIGINS=https://localhost:7001,http://localhost:5001

# ==========================================
# SECURITY
# ==========================================
ALLOWED_HOSTS=localhost,*.corelio.app
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ==========================================
# MULTI-TENANCY
# ==========================================
TENANT_CACHE_DURATION_MINUTES=30

# ==========================================
# FILE STORAGE (Azure Blob or Local)
# ==========================================
STORAGE_PROVIDER=AzureBlob
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_STORAGE_CONTAINER_NAME=corelio-files

# Local Storage Alternative
LOCAL_STORAGE_PATH=./uploads

# ==========================================
# FEATURE FLAGS
# ==========================================
FEATURE_ENABLE_SWAGGER=true
FEATURE_ENABLE_DIAGNOSTICS=true
FEATURE_ENABLE_DETAILED_ERRORS=true

# ==========================================
# PERFORMANCE
# ==========================================
DATABASE_MAX_POOL_SIZE=100
DATABASE_MIN_POOL_SIZE=10
DATABASE_CONNECTION_IDLE_LIFETIME=300

# ==========================================
# SAT CATALOGS (Optional: cache locally)
# ==========================================
SAT_CATALOGS_CACHE_HOURS=24
SAT_CATALOGS_UPDATE_URL=https://www.sat.gob.mx/consulta/catalogos

# ==========================================
# DEVELOPMENT ONLY
# ==========================================
SEED_SAMPLE_DATA=true
ENABLE_DEVELOPER_EXCEPTION_PAGE=true
ENABLE_BROWSER_LINK=true
